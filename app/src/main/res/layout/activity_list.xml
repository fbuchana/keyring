<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />

        <EditText
            android:id="@+id/search_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            android:elegantTextHeight="false"
            android:ems="10"
            android:gravity="center"
            android:hint="Customers (tap to filter)"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:selectAllOnFocus="true"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/customer_list"
            android:layout_width="match_parent"
            android:layout_height="327dp" />

        <EditText
            android:id="@+id/search_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            android:elegantTextHeight="false"
            android:ems="10"
            android:gravity="center"
            android:hint="Jobs (tap to filter)"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/job_list"
            android:layout_width="match_parent"
            android:layout_height="320dp" />

        <EditText
            android:id="@+id/search_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            android:elegantTextHeight="false"
            android:ems="10"
            android:gravity="center"
            android:hint="Vehicles (tap to filter)"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/vehicle_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <include layout="@layout/include_navigation" />

</android.support.v4.widget.DrawerLayout>