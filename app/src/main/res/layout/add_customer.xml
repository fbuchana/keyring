<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif"
            android:text="Customer information:"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Name:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Street address:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="City, State:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="ZIP code:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#4869d6"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55sp"
            android:text="Phone number:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="?attr/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Email:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#4869d6"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />

        <EditText
            android:id="@+id/cust_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="ex. John Smith"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/cust_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="123 Golden Ln."
            android:inputType="textPostalAddress"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/cust_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Lenoir, NC"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/cust_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="ex. 28704"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/cust_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="ex. 828-555-1234"
            android:inputType="phone"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/cust_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="ex. jsmith@example.com"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/add_customer_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="140dp"
            android:background="?attr/colorPrimaryDark"
            android:elevation="10dp"
            android:text="   Add   "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/authui_inputTextColor"
            android:textSize="60sp" />

    </LinearLayout>
    <include layout="@layout/include_navigation" />

</android.support.v4.widget.DrawerLayout>
