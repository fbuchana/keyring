<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif"
        android:text="Job information:"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="?attr/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Customer:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="?attr/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="VIN:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="?attr/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Start date:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="?attr/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="End date:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="?attr/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="Description:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#4869d6"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="Costs Incurred:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#4869d6"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Payment:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#4869d6"
        android:textSize="40sp"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />

        <EditText
            android:id="@+id/job_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="ex. John Smith"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/job_vin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:hint="ex. 10496DE45T8643118"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="ex. 2/12/2015"
            android:inputType="date"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="ex. 2/15/2015"
            android:inputType="date"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="ex. Painted front bumper"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="58dp"
            android:ems="10"
            android:hint="ex. 325.00"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:hint="ex. 600.00"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/add_job_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="79dp"
            android:background="?attr/colorPrimaryDark"
            android:elevation="10dp"
            android:text="   Add   "
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/authui_inputTextColor"
            android:textSize="60sp" />

    </LinearLayout>
    <include layout="@layout/include_navigation" />

</android.support.v4.widget.DrawerLayout>
